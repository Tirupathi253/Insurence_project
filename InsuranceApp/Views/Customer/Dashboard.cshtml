@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome to Your Customer Dashboard</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card bg-info text-white mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-card-list"></i> View Policies</h5>
                <p class="card-text">Check your active policies and coverage details.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-credit-card"></i> Make Payment</h5>
                <p class="card-text">Pay your premium online securely.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning text-white mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-file-earmark"></i> Submit Claim</h5>
                <p class="card-text">Easily submit a claim for processing.</p>
            </div>
        </div>
    </div>
</div>
