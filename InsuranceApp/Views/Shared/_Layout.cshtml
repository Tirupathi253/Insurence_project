<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Insurance App</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Global Styles -->
    <style>
        body { font-family: 'Segoe UI', sans-serif; }
        header h1 { font-weight: 600; }
        footer { font-size: 0.9rem; color: #888; }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="bg-primary text-white p-3 mb-4">
        <div class="container">
            <h1 class="mb-0"><i class="bi bi-shield-check"></i> Insurance App</h1>
        </div>
    </header>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
        <div class="container">
            <a class="navbar-brand" href="/">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/Customer/Login"><i class="bi bi-person"></i> Customer Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Agent/Login"><i class="bi bi-person-badge"></i> Agent Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Employee/Login"><i class="bi bi-briefcase"></i> Employee Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Policy/List"><i class="bi bi-card-list"></i> Policies</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Calculator/Premium"><i class="bi bi-calculator"></i> Premium Calculator</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Body -->
    <div class="container mb-5">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center py-3">
        <div class="container">
            <p class="mb-0">&copy; 2025 Insurance App - Inspired by LIC India</p>
        </div>
    </footer>

    <!-- Bootstrap JS (Optional for dropdown, collapse, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
