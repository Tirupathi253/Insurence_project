@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Customers</h5>
                <p class="card-text">@ViewBag.Customers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Policies</h5>
                <p class="card-text">@ViewBag.Policies</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Claims</h5>
                <p class="card-text">@ViewBag.Claims</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Payments</h5>
                <p class="card-text">₹@ViewBag.Payments</p>
            </div>
        </div>
    </div>
</div>

<form method="post" asp-action="Logout">
    <button type="submit" class="btn btn-outline-danger mt-3">Logout</button>
</form>
