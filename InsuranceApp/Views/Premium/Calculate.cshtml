@using InsuranceApp.Models
@model PremiumInputModel
@{
    ViewData["Title"] = "Calculate Premium";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Calculate Your Premium</h2>
<form asp-action="Calculate" method="post">
    <div class="mb-3">
        <label>Policy Type</label>
        <select name="PolicyType" class="form-control">
            <option>Life</option>
            <option>Health</option>
            <option>General</option>
        </select>
    </div>
    <div class="mb-3">
        <label>Age</label>
        <input type="number" name="Age" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Coverage Amount (₹)</label>
        <input type="number" name="CoverageAmount" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Tenure (Years)</label>
        <input type="number" name="TenureYears" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Calculate Premium</button>
</form>
